<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/iv_planet_picture"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        tools:src="@drawable/ic_launcher_background"
        android:transitionName="@string/picture"
        />

    <TextView
        android:id="@+id/tv_planet_title"
        style="@style/ListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_planet_picture"
        android:paddingEnd="@dimen/list_item_padding"
        android:paddingStart="@dimen/list_item_padding"
        tools:text="Test"
        android:transitionName="@string/title"
        />

    <TextView
        android:id="@+id/tv_planet_description"
        style="@style/ListDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_planet_title"
        android:layout_toEndOf="@id/iv_planet_picture"
        android:paddingEnd="@dimen/list_item_padding"
        android:paddingStart="@dimen/list_item_padding"
        tools:text="Test"
        android:transitionName="@string/description"
        />


</RelativeLayout>