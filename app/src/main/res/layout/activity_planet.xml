<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/main_padding"
        >

        <TextView
            android:id="@+id/tv_planet_title"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/main_padding"
            android:textSize="@dimen/text_size_xx_large"
            android:transitionName="@string/title"
            tools:text="Test"
            />

        <TextView
            android:id="@+id/tv_planet_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_padding"
            android:paddingEnd="@dimen/list_item_padding"
            android:paddingStart="@dimen/list_item_padding"
            android:textColor="@color/textDimGray"
            android:textSize="@dimen/text_size_x_large"
            android:transitionName="@string/description"
            tools:text="Test"
            />

        <ImageView
            android:id="@+id/iv_planet_picture"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_gravity="center_horizontal"
            android:transitionName="@string/picture"
            tools:src="@drawable/ic_launcher_background"
            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>